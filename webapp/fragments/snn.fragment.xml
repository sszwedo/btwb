<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<VBox id="sf1" alignContent="Center" justifyContent="Center">
		<items>
			<f:SimpleForm id="sd" editable="false" minWidth="1024" class="sapUiForceWidthAuto sapUiResponsiveMargin">
				<f:title>
					<core:Title text="{i18n>snd}"/>
				</f:title>
				<Label text="{i18n>num}"/>
				<Text text="{Qmnum}&#10;"/>
				<Label text="{i18n>mat}"/>
				<Text text="{Matnr}"/>
				<Label text="{i18n>ser}"/>
				<Text text="{Serialnr}"/>
				<Label text="{i18n>des}"/>
				<Text text="{Qmtxt}"/>
				<Label text="{i18n>dat}"/>
				<!--		<Text text="{Qmdat}"/>-->
				<Text text="{ path: 'Qmdat', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' } } "/>
				<Label text="{i18n>pri}"/>
				<Text text="{Priok}"/>
				<Label text="{i18n>cre}"/>
				<Text text="{Ernam}"/>
				<Label text="{i18n>cust}"/>
				<Text text="{Bstnk}"/>
			</f:SimpleForm>
			<f:SimpleForm id="sc" editable="true" minWidth="1024" class="sapUiForceWidthAuto sapUiResponsiveMargin">
				<f:title>
					<core:Title text="{i18n>snd}"/>
				</f:title>
				<Label text="{i18n>num}"/>
				<Text text="{Qmnum}&#10;"/>
				<Label text="{i18n>mat}"/>
				<Input value="{Matnr}"/>
				<Label text="{i18n>ser}"/>
				<Input value="{Serialnr}"/>
				<Label text="{i18n>des}"/>
				<TextArea xmlns="sap.m" value="{Qmtxt}" rows="4" id="area0"/>
				<Label text="{i18n>dat}"/>
				<DatePicker xmlns="sap.m" id="picker0"
					placeholder="{ path: 'Qmdat', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' } } "/>
				<Label text="{i18n>pri}"/>
				<Select id="priority" selectedKey="{Priok}">
					<items>
						<core:Item text="Low" key="Low"/>
						<core:Item text="Medium" key="Medium"/>
						<core:Item text="High" key="High"/>
					</items>
				</Select>
				<Label text="{i18n>cre}"/>
				<Input value="{Ernam}"/>
				<Label text="{i18n>cust}"/>
				<Input value="{Bstnk}"/>
			</f:SimpleForm>
		</items>
	</VBox>
	<FlexBox alignItems="Center" justifyContent="Center" id="fb1">
		<items>
			<Button id="edit" text="{i18n>edit}" press="handleEditPress"/>
			<Button id="save" text="{i18n>save}" type="Emphasized" visible="false" press="handleSavePress"/>
			<Button id="cancel" text="{i18n>can}" visible="false" press="handleCancelPress"/>
		</items>
	</FlexBox>
	<f:SimpleForm minWidth="1024" maxContainerCols="2" class="sapUiForceWidthAuto sapUiResponsiveMargin" id="sf0">
		<f:title>
			<core:Title text="{i18n>snd}"/>
		</f:title>
		<Text text="{i18n>sel}"/>
	</f:SimpleForm>
</core:FragmentDefinition>