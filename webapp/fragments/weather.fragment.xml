<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table width="auto" class="sapUiResponsiveMargin" id="tabWeeklyForecast" items="{forecast>/items}" columns="{forecast>/cols}">
		<items>
			<ColumnListItem counter="0" id="item0">
				<cells>
					<Image src="https://openweathermap.org/img/wn/{forecast>icon}@2x.png" width="40px" height="40px"/>
					<Text text="{forecast>date}"/>
					<Text text="{forecast>temp}"/>
					<Text text="{forecast>speed}"/>
					<Text maxLines="0" text="{forecast>clouds}"/>
					<Text maxLines="0" text="{forecast>humidity}"/>
					<Text maxLines="0" text="{forecast>deg}"/>
					<!--<Text maxLines="0" text="{forecast>units}"/>-->
				</cells>
			</ColumnListItem>
		</items>
		<columns>
			<Column>
				<header>
					<Label text="{forecast>name}"/>
				</header>
			</Column>
		</columns>
	</Table>
</core:FragmentDefinition>